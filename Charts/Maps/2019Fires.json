{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ShaneHettiarachchi/FIT3179-data-visualisation-2-new/main/Data/Australia/AusShape.topojson",
        "format": { "type": "topojson", "feature": "AusShape" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#1e293b",
        "stroke": "#334155",
        "strokeWidth": 0.7
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ShaneHettiarachchi/FIT3179-data-visualisation-2-new/main/Data/Australia/modis_2019_Australia.csv"
      },
      "transform": [
        { "calculate": "round(datum.longitude * 2) / 2", "as": "lon_rounded" },
        { "calculate": "round(datum.latitude * 2) / 2", "as": "lat_rounded" },
        {
          "aggregate": [
            { "op": "count", "as": "fire_count" }
          ],
          "groupby": ["lon_rounded", "lat_rounded"]
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.7
      },
      "encoding": {
        "longitude": { "field": "lon_rounded", "type": "quantitative" },
        "latitude": { "field": "lat_rounded", "type": "quantitative" },
        "size": {
          "field": "fire_count",
          "type": "quantitative",
          "title": "Fire Count",
          "scale": { "range": [10, 500] }
        },
        "color": {
          "field": "fire_count",
          "type": "quantitative",
          "scale": { "scheme": "reds" }
        },
        "tooltip": [
          { "field": "fire_count", "type": "quantitative", "title": "Fire Count" }
        ]
      }
    }
  ],
  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" },
    "projection": { "type": "mercator" }
  }
}
