{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 500,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ShaneHettiarachchi/FIT3179-data-visualisation-2-new/main/Data/Australia/AusShape.topojson",
        "format": {"type": "topojson", "feature": "AusShape"}
      },
      "mark": {"type": "geoshape", "fill": "#1e293b", "stroke": "#334155", "strokeWidth": 0.7}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ShaneHettiarachchi/FIT3179-data-visualisation-2-new/main/Data/Australia/AusFires.csv"
      },
      "mark": {"type": "circle", "opacity": 0.7, "fill": "#ff5100"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "severity (ha)",
          "type": "quantitative",
          "scale": {"domain": [0, 200000], "range": [10, 500]},
          "legend": {
            "title": "Severity (hectares burnt)",
            "symbolType": "circle"
          }
        },
        "tooltip": [
          {"field": "fromdate", "title": "Start Date"},
          {"field": "Duration (days)", "title": "Duration (days)"},
          {"field": "severity (ha)", "title": "Hectares Burnt"}
        ]
      }
    }
  ],
  "config": {
    "background": "transparent",
    "legend": {"labelColor": "#000000", "titleColor": "#000000"},
    "title": {"color": "#ffffff"},
    "view": {"stroke": "transparent"}
  }
}